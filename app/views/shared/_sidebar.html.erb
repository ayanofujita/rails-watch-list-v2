  <ul>
    <li class="my-2 p-2 rounded-3 active">
      <%= link_to root_path do %>
        <i class="fa-solid fa-house me-1"></i>Home
      <% end %>
    </li>
    <li class="my-2 p-2 rounded-3">
      <%= link_to lists_path do %>
        <i class="fa-solid fa-list-ul"></i>Watchlists
      <% end %>
    </li>
    <li class="my-2 p-2 rounded-3">
      <%= link_to lists_path do %>
        <i class="fa-solid fa-film"></i>Movies
      <% end %>
    </li>
  </ul>
  <button class="btn btn-primary rounded-3 mt-3 text-white">
    <i class="fa-solid fa-plus"></i> Create Watchlist
  </button>
  <hr>
  <h6>My Lists</h6>
  <h6>Saved Lists</h6>

  <% if user_signed_in? && current_user.photo.attached? %>
    <div class="dropdown mt-auto">
      <div class="d-flex align-items-center border rounded-3 p-2" data-bs-toggle="dropdown" aria-expanded="false">
        <%= cl_image_tag current_user.photo.key, class: "avatar me-3" %>
        <p class="m-0"><strong><%= current_user.username %></strong></p>
        <i class="fa-solid fa-ellipsis ms-auto me-2"></i>
      </div>
      <div class="dropdown-menu dropdown-menu-end">
        <%= link_to "Edit", edit_user_registration_path(current_user), class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </div>
  <% elsif user_signed_in? && !current_user.photo.attached? %>
    <div class="dropdown mt-auto">
      <div class="d-flex align-items-center border rounded-3 p-2" data-bs-toggle="dropdown" aria-expanded="false">
        <%= image_tag "guest.png", class: "avatar me-3" %>
        <p class="m-0"><strong><%= current_user.username %></strong></p>
        <i class="fa-solid fa-ellipsis ms-auto me-2"></i>
      </div>
      <div class="dropdown-menu dropdown-menu-end">
        <%= link_to "Edit", edit_user_registration_path(current_user), class: "dropdown-item" %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
      </div>
    </div>
  <% else %>
    <div class="dropdown mt-auto">
      <div class="d-flex align-items-center border rounded-3 p-2" data-bs-toggle="dropdown" aria-expanded="false">
        <%= image_tag "guest.png", class: "avatar me-3" %>
        <p class="m-0"><strong>Guest</strong></p>
        <i class="fa-solid fa-ellipsis ms-auto me-2"></i>
      </div>
      <div class="dropdown-menu dropdown-menu-end">
        <%= link_to "Log in", new_user_session_path, class: "dropdown-item" %>
      </div>
    </div>
  <% end %>
</div>
