<div class="movie-info row align-items-center w-100">
  <img src="<%= movie.poster_url %>" alt="<%= movie.poster_url %>'s poster" class="rounded-3 col-3">
  <div class="col-9">
    <h4 class="m-0 fw-semibold">
      <%= movie.title %>
      <small class="opacity-75"><%= "( #{movie.year} )" if movie.year %></small>
    </h4>
    <p class="m-0"><small class="opacity-75">Directed by:</small> <%= movie.director %></p>
    <p class="opacity-75"><small><%= movie.genres_and_runtime if movie.genres_and_runtime %></small></p>
    <p><%= movie.overview %></p>
    <div class="border rounded-3 p-2 text-center" style="width: fit-content;">
      <p class="fw-semibold mb-2"><small>IMDB</small></p>
      <h4><%= movie.rating %>/10</h4>
    </div>
  </div>
</div>
